<header
  id="header"
  class="fixed top-0 self-center max-w-5xl w-full flex flex-row items-center justify-between px-4 py-8 z-50"
>
  <div class=""></div>

  <div class="h-[70vh] w-1/3 relative">
    <div
      class="absolute right-0 z-50 flex flex-row items-center space-x-5 px-5 py-2 bg-black/30 rounded-3xl"
    >
      <div class="group cursor-pointer">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          class="w-6 h-6 duration-300 transition group-hover:stroke-white/50"
          stroke-width="1.5"
          stroke="white"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z"
          ></path>
        </svg>
      </div>
      <div class="group cursor-pointer" id="header-button">
        <svg
          class="w-8 h-8 stroke-white"
          viewBox="0 0 761 293"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            class="transform transition duration-200"
            id="header-button-icon-up"
            d="M72 211L501 211"
            stroke-width="26"
            stroke-linecap="round"></path>
          <path
            class="transform transition duration-200"
            id="header-button-icon-down"
            d="M229 80L658 80"
            stroke-width="26"
            stroke-linecap="round"></path>
        </svg>
      </div>
    </div>
    <div
      id="header-content"
      class="flex flex-col items-end bg-black/30 backdrop-blur rounded-3xl h-full py-3 opacity-0 translate-x-1/2"
    >
      <div class="h-full flex flex-col items-end px-8">
        <div class="flex flex-col text-right space-y-8 py-16">
          <a class="text-3xl cursor-pointer hover:underline underline-offset-4"
            >Home</a
          >
          <a class="text-3xl cursor-pointer hover:underline underline-offset-4"
            >Projects</a
          >
          <a class="text-3xl cursor-pointer hover:underline underline-offset-4"
            >Career</a
          >
          <a class="text-3xl cursor-pointer hover:underline underline-offset-4"
            >Blog</a
          >
        </div>
        <div class="flex flex-row items-center mt-auto pb-2">
          <p class="text-sm">uwu</p>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  import gsap from "gsap"
  import CustomEase from "gsap/CustomEase"

  gsap.registerPlugin(CustomEase)

  let headerShown: boolean = false

  const headerContent = document.getElementById("header-content") as HTMLElement
  const headerButton = document.getElementById("header-button") as HTMLElement

  const headerButtonIconUpperPath = document.querySelector(
    "#header-button-icon-up"
  ) as SVGPathElement
  const headerButtonIconBottomPath = document.querySelector(
    "#header-button-icon-down"
  ) as SVGPathElement

  headerButton.addEventListener("click", () => {
    if (headerShown) hideHeader()
    else showHeader()
  })

  const showHeader = () => {
    headerContent.classList.remove("hidden")
    gsap.to(headerContent, { x: 0, opacity: 1, ease: "power4.out" })

    addAnimationsToIcon()

    headerShown = true
  }

  const hideHeader = () => {
    const animation = gsap.to(headerContent, { x: "50%", opacity: 0 })

    removeAnimationsFromIcon()

    animation.eventCallback("onComplete", () => {
      headerContent.classList.add("hidden")
      headerShown = false
    })
  }

  const addAnimationsToIcon = () => {
    headerButtonIconUpperPath.classList.add(
      "-rotate-45",
      "translate-y-48",
      "-translate-x-24"
    )
    headerButtonIconBottomPath.classList.add("rotate-45", "-translate-y-48")
  }

  const removeAnimationsFromIcon = () => {
    headerButtonIconUpperPath.classList.remove(
      "-rotate-45",
      "translate-y-48",
      "-translate-x-24"
    )
    headerButtonIconBottomPath.classList.remove("rotate-45", "-translate-y-48")
  }
</script>
