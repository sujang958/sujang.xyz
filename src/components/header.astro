<script>
  import gsap from "gsap"
  import CustomEase from "gsap/CustomEase"

  gsap.registerPlugin(CustomEase)

  let headerShown: boolean = false

  const headerContent = document.getElementById("header-content") as HTMLElement
  const headerButton = document.getElementById("header-button") as HTMLElement

  const headerButtonIconUpperPath = document.querySelector(
    "#header-button-icon-up"
  ) as SVGPathElement
  const headerButtonIconBottomPath = document.querySelector(
    "#header-button-icon-down"
  ) as SVGPathElement

  headerButton.addEventListener("click", () => {
    if (headerShown) hideHeader()
    else showHeader()
  })

  const showHeader = () => {
    headerContent.classList.remove("hidden")
    gsap.to(headerContent, { x: 0, opacity: 1, ease: "power4.out" })

    addAnimationsToIcon()

    headerShown = true
  }

  const hideHeader = () => {
    const animation = gsap.to(headerContent, { x: "50%", opacity: 0 })

    removeAnimationsFromIcon()

    animation.eventCallback("onComplete", () => {
      headerContent.classList.add("hidden")
      headerShown = false
    })
  }

  const addAnimationsToIcon = () => {
    headerButtonIconUpperPath.classList.add(
      "-rotate-45",
      "translate-y-48",
      "-translate-x-24"
    )
    headerButtonIconBottomPath.classList.add("rotate-45", "-translate-y-52")
  }

  const removeAnimationsFromIcon = () => {
    headerButtonIconUpperPath.classList.remove(
      "-rotate-45",
      "translate-y-48",
      "-translate-x-24"
    )
    headerButtonIconBottomPath.classList.remove("rotate-45", "-translate-y-52")
  }
</script>

<script is:inline>
  const applyTheme = (theme) =>
    document.documentElement.classList[theme == "dark" ? "add" : "remove"](
      "dark"
    )

  let defaultTheme = localStorage.getItem("theme")

  if (
    !defaultTheme &&
    window.matchMedia &&
    window.matchMedia("(prefers-color-scheme: dark)").matches
  ) {
    defaultTheme = "dark"
  }

  applyTheme(defaultTheme)

  const _themeOriginal = { theme: String(defaultTheme) }
  const theme = new Proxy(_themeOriginal, {
    set(target, key, newValue) {
      localStorage.setItem("theme", newValue)
      applyTheme(newValue)

      return Reflect.set(target, key, newValue)
    },
  })

  const themeChangeButton = document.querySelector("#theme-button")

  themeChangeButton.addEventListener("click", () => {
    if (theme.theme == "dark") theme.theme = "light"
    else theme.theme = "dark"
  })
</script>
