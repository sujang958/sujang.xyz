<header
  id="header"
  class="fixed top-0 z-50 flex w-full max-w-5xl flex-row items-center justify-between self-center px-4 py-8"
>
  <div class=""></div>

  <div class="relative h-[70vh] w-1/3 text-white">
    <div
      class="absolute right-0 z-50 flex flex-row items-center space-x-5 rounded-3xl bg-black/50 dark:bg-black/30 px-5 py-2"
    >
      <div class="group cursor-pointer" id="theme-button">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          class="h-6 w-6 transition duration-300 group-hover:stroke-white/50"
          stroke-width="1.5"
          stroke="white"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z"
          ></path>
        </svg>
      </div>
      <div class="group cursor-pointer" id="header-button">
        <svg
          class="h-8 w-8 stroke-white"
          viewBox="0 0 761 293"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            class="transform transition duration-200"
            id="header-button-icon-up"
            d="M72 211L501 211"
            stroke-width="26"
            stroke-linecap="round"></path>
          <path
            class="transform transition duration-200"
            id="header-button-icon-down"
            d="M229 80L658 80"
            stroke-width="26"
            stroke-linecap="round"></path>
        </svg>
      </div>
    </div>
    <div
      id="header-content"
      class="flex h-full translate-x-1/2 flex-col items-end rounded-3xl bg-black/50 dark:bg-black/30 py-3 opacity-0 backdrop-blur"
    >
      <div class="flex h-full flex-col items-end px-8">
        <div class="flex flex-col space-y-8 py-16 text-right">
          <a class="cursor-pointer text-3xl underline-offset-4 hover:underline"
            >Home</a
          >
          <a class="cursor-pointer text-3xl underline-offset-4 hover:underline"
            >Projects</a
          >
          <a class="cursor-pointer text-3xl underline-offset-4 hover:underline"
            >Career</a
          >
          <a class="cursor-pointer text-3xl underline-offset-4 hover:underline"
            >Blog</a
          >
        </div>
        <div class="mt-auto flex flex-row items-center pb-2">
          <p class="text-sm">uwu</p>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  import gsap from "gsap"
  import CustomEase from "gsap/CustomEase"

  gsap.registerPlugin(CustomEase)

  let headerShown: boolean = false

  const headerContent = document.getElementById("header-content") as HTMLElement
  const headerButton = document.getElementById("header-button") as HTMLElement

  const headerButtonIconUpperPath = document.querySelector(
    "#header-button-icon-up"
  ) as SVGPathElement
  const headerButtonIconBottomPath = document.querySelector(
    "#header-button-icon-down"
  ) as SVGPathElement

  headerButton.addEventListener("click", () => {
    if (headerShown) hideHeader()
    else showHeader()
  })

  const showHeader = () => {
    headerContent.classList.remove("hidden")
    gsap.to(headerContent, { x: 0, opacity: 1, ease: "power4.out" })

    addAnimationsToIcon()

    headerShown = true
  }

  const hideHeader = () => {
    const animation = gsap.to(headerContent, { x: "50%", opacity: 0 })

    removeAnimationsFromIcon()

    animation.eventCallback("onComplete", () => {
      headerContent.classList.add("hidden")
      headerShown = false
    })
  }

  const addAnimationsToIcon = () => {
    headerButtonIconUpperPath.classList.add(
      "-rotate-45",
      "translate-y-48",
      "-translate-x-24"
    )
    headerButtonIconBottomPath.classList.add("rotate-45", "-translate-y-48")
  }

  const removeAnimationsFromIcon = () => {
    headerButtonIconUpperPath.classList.remove(
      "-rotate-45",
      "translate-y-48",
      "-translate-x-24"
    )
    headerButtonIconBottomPath.classList.remove("rotate-45", "-translate-y-48")
  }
</script>

<script is:inline>
  const applyTheme = (theme) =>
    document.documentElement.classList[theme == "dark" ? "add" : "remove"](
      "dark"
    )

  let defaultTheme = localStorage.getItem("theme")

  if (
    !defaultTheme &&
    window.matchMedia &&
    window.matchMedia("(prefers-color-scheme: dark)").matches
  ) {
    defaultTheme = "dark"
  }

  applyTheme(defaultTheme)

  const _themeOriginal = { theme: String(defaultTheme) }
  const theme = new Proxy(_themeOriginal, {
    set(target, key, newValue) {
      localStorage.setItem("theme", newValue)
      applyTheme(newValue)

      Reflect.set(target, key, newValue)
    },
  })

  const themeChangeButton = document.querySelector("#theme-button")

  themeChangeButton.addEventListener("click", () => {
    if (theme.theme == "dark") theme.theme = "light"
    else theme.theme = "dark"
  })
</script>
